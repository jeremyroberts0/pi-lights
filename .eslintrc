{
    "extends": "airbnb-base",
    "rules": {
        "semi": "off",
        "indent": ["error", 4],
        "no-console": "off",
        "no-restricted-globals": "off",
        "global-require": "off",
        "guard-for-in": "off",
        "no-restricted-syntax": "off"
    },
    "env": {
        "node": true,
        "mocha": true
    }
}