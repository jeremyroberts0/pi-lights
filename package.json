{
  "name": "pi-lights",
  "version": "0.1.0",
  "description": "Control individually addressable LED strips with a raspberry pi",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:dev": "NO_UPDATE=true PORT=8080 CONSOLE_VISUALIZER=true node --inspect src/index.js",
    "debug": "NO_UPDATE=true PORT=8080 node src/index.js --debug",
    "debug:50": "NO_UPDATE=true PORT=8080 node src/index.js --debug --leds=50",
    "debug:100": "NO_UPDATE=true PORT=8080 node src/index.js --debug --leds=100",
    "debug:300": "NO_UPDATE=true PORT=8080 node src/index.js --debug --leds=300",
    "test": "npm run test:lint",
    "test:lint": "eslint --fix **/*.js",
    "build:prod": "NODE_ENV=production npm install --only=production"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeremyroberts0/pi-lights.git"
  },
  "author": "Jeremy Roberts",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jeremyroberts0/pi-lights/issues"
  },
  "homepage": "https://github.com/jeremyroberts0/pi-lights",
  "dependencies": {
    "chalk": "^4.1.0",
    "multicast-dns": "^7.2.2",
    "restify": "^6.3.4",
    "rpi-ws281x-native": "^0.10.1",
    "simple-git": "^2.31.0"
  },
  "devDependencies": {
    "eslint": "^4.12.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0"
  }
}
